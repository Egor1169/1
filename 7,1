<h1>Браузер Баз Данных</h1>

<form method="get">
    <input type="text" name="search" placeholder="Поиск по базам данных">
    <button type="submit">Найти</button>
</form>

<?php
// Конфигурация базы данных
$host = 'localhost';
$user = 'egor';
$password = '0000';

// Соединение с сервером MySQL
$conn = new mysqli($host, $user, $password);

// Проверка соединения
if ($conn->connect_error) {
    die("<div class=\"error\">Ошибка подключения: " . $conn->connect_error . "</div>");
}


// Обработка поискового запроса
$search = isset($_GET['search']) ? $_GET['search'] : '';
$search = $conn->real_escape_string($search); // Важно для предотвращения SQL-инъекций


// Функция для отображения баз данных
function getDatabases($conn, $search) {
    echo "<h2>Доступные базы данных</h2>";
    echo "<ul>";

    $query = "SHOW DATABASES";
    if (!empty($search)) {
        $query = "SHOW DATABASES LIKE '%" . $search . "%'";
    }
    $result = $conn->query($query);

    if (!$result) {
        die("<div class=\"error\">Ошибка выполнения запроса: " . $conn->error . "</div>");
    }

    while ($row = $result->fetch_assoc()) {
        echo '<li><a href="?db=' . urlencode($row['Database']) . '">' . htmlspecialchars($row['Database']) . '</a></li>';
    }
    echo "</ul>";
}

// Функция для отображения таблиц
function getTables($conn, $db) {
    $conn->select_db($db);
    echo "<h2>Таблицы в базе данных: " . htmlspecialchars($db) . "</h2>";
    echo "<ul>";
    $result = $conn->query("SHOW TABLES");
    if (!$result) {
        die("<div class=\"error\">Ошибка выполнения запроса: " . $conn->error . "</div>");
    }
    while ($row = $result->fetch_row()) {
        echo '<li><a href="?db=' . urlencode($db) . '&table=' . urlencode($row[0]) . '">' . htmlspecialchars($row[0]) . '</a></li>';
    }
    echo "</ul>";
}

// Функция для отображения данных таблицы (оставлена как есть, но нужно экранирование)
function getTableData($conn, $db, $table) {
    $conn->select_db($db);
    // ... (ваш код для отображения данных) ...
}

// Обработка запросов
if (isset($_GET['search'])) {
    getDatabases($conn, $search);
} elseif (isset($_GET['db']) && isset($_GET['table'])) {
    getTableData($conn, $_GET['db'], $_GET['table']);
} elseif (isset($_GET['db'])) {
    getTables($conn, $_GET['db']);
} else {
    getDatabases($conn, "");
}


$conn->close();
?>

