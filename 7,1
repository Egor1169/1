<h1>Браузер Баз Данных</h1>

<?php
// Конфигурация базы данных (замените на свои данные!)
$host = 'localhost';
$user = 'your_username';
$password = 'your_password';
$database = 'your_database_name'; // Не забудьте указать имя базы данных!

// Соединение с сервером MySQL
$conn = new mysqli($host, $user, $password);

// Проверка соединения
if ($conn->connect_error) {
    echo "<p class='error'>Ошибка подключения: " . $conn->connect_error . "</p>";
    die();
}


//Функция для выбора баз данных
function getDatabases($conn) {
    echo "<h2>Доступные базы данных</h2>";
    echo "<ul>";
    $result = $conn->query("SHOW DATABASES");
    while ($row = $result->fetch_assoc()) {
        echo '<li><a href="?db=' . urlencode($row['Database']) . '">' . htmlspecialchars($row['Database']) . '</a></li>';
    }
    echo "</ul>";
}

//Функция для отображения таблиц
function getTables($conn, $db) {
    $conn->select_db($db);
    if ($conn->error) {
        echo "<p class='error'>Ошибка при выборе базы данных: " . $conn->error . "</p>";
        return;
    }
    echo "<h2>Таблицы в базе данных: " . htmlspecialchars($db) . "</h2>";
    echo "<ul>";
    $result = $conn->query("SHOW TABLES");
    while ($row = $result->fetch_row()) {
        echo '<li><a href="?db=' . urlencode($db) . '&table=' . urlencode($row[0]) . '">' . htmlspecialchars($row[0]) . '</a></li>';
    }
    echo "</ul>";
}

//Функция для отображения данных таблицы с возможностью поиска
function getTableData($conn, $db, $table) {
	getTableDataWithSearch($conn,$db,$table,"");

}

function getTableDataWithSearch($conn,$db,$table,$search){
	$conn->select_db($db);
	if ($conn->error) {
		echo "<p class='error'>Ошибка при выборе базы данных: " . $conn->error . "</p>";
		return;
	}

	$searchQuery = "";
	if(!empty($search)){
		$search = $conn->real_escape_string($search);
		$searchArray = explode(" ", $search);
		foreach($searchArray as $keyword){
			if(!empty($keyword))
				$searchQuery .= " OR column1 LIKE '%".$keyword."%'";
		}
	
	}
	if(empty($searchQuery))
		$result = $conn->query("SELECT * FROM ".$table);
	else
		$result = $conn->query("SELECT * FROM ".$table." WHERE ".substr($searchQuery,4));


    if($result->num_rows > 0){
	    displayResults($result,$table);
	}else{
	    echo "Ничего не найдено.";
	}
}


//функция для вывода результата поиска
function displayResults($result,$table){

  // Вывод структуры таблицы
  echo "<h2>Результаты поиска для таблицы: " . htmlspecialchars($table) . "</h2>";
  echo "<h3>Структура таблицы</h3>";
  echo "<table><tr><th>Поле</th><th>Тип</th></tr>";
    $fields = $result->fetch_fields();
    foreach ($fields as $field) {
        echo "<tr><td>" . htmlspecialchars($field->name) . "</td><td>" . htmlspecialchars($field->type) . "</td></tr>";
    }
  echo "</table>";

  // Вывод данных таблицы
  echo "<h3>Данные таблицы</h3>";
  echo "<table><tr>";
  foreach ($fields as $field) {
      echo "<th>" . htmlspecialchars($field->name) . "</th>";
  }
  echo "</tr>";

  while ($row = $result->fetch_assoc()) {
      echo "<tr>";
      foreach ($row as $value) {
          echo "<td>" . htmlspecialchars($value) . "</td>";
      }
      echo "</tr>";
  }
  echo "</table>";


}

if (isset($_GET['db']) && isset($_GET['table']) && isset($_GET['search'])) {
	getTableDataWithSearch($conn,$_GET['db'],$_GET['table'],$_GET['search']);
}elseif (isset($_GET['db']) && isset($_GET['table'])) {
    getTableData($conn, $_GET['db'], $_GET['table']);
} elseif (isset($_GET['db'])) {
    getTables($conn, $_GET['db']);
} else {
    getDatabases($conn);
}

// Закрытие соединения
$conn->close();
?>

<form method="GET">
<input type="text" name="search" placeholder="Поиск...">
<input type="submit" value="Поиск">
</form>

</body>
