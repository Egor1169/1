<h1>Браузер Баз Данных</h1>

<?php
// Конфигурация базы данных (Замените на ваши значения!)
$host = 'localhost';
$user = 'your_username';
$password = 'your_password';
$database = 'your_database_name';

// Соединение с сервером MySQL
$conn = new mysqli($host, $user, $password, $database);

// Проверка соединения
if ($conn->connect_error) {
    die("Ошибка подключения: " . $conn->connect_error);
}


function getDatabases($conn) {
    echo "<h2>Доступные базы данных</h2>";
    echo "<ul>";
    $result = $conn->query("SHOW DATABASES");
    while ($row = $result->fetch_assoc()) {
        echo '<li><a href="?db=' . urlencode($row['Database']) . '">' . htmlspecialchars($row['Database']) . '</a></li>';
    }
    echo "</ul>";
}

function getTables($conn, $db) {
    $conn->select_db($db);
    echo "<h2>Таблицы в базе данных: " . htmlspecialchars($db) . "</h2>";
    echo "<ul>";
    $result = $conn->query("SHOW TABLES");
    while ($row = $result->fetch_row()) {
        echo '<li><a href="?db=' . urlencode($db) . '&table=' . urlencode($row[0]) . '">' . htmlspecialchars($row[0]) . '</a></li>';
    }
    echo "</ul>";
}


function getTableData($conn, $db, $table) {
    $conn->select_db($db);
    echo "<h2>Данные таблицы: " . htmlspecialchars($table) . "</h2>";

    $result = $conn->query("SHOW COLUMNS FROM " . $conn->real_escape_string($table));

    echo "<h3>Структура таблицы</h3>";
    echo "<table><tr><th>Поле</th><th>Тип</th><th>Популярный символ</th></tr>";

    while ($row = $result->fetch_assoc()) {
        $fieldName = $row['Field'];
        $fieldType = $row['Type'];

        echo "<tr><td>" . htmlspecialchars($fieldName) . "</td><td>" . htmlspecialchars($fieldType) . "</td><td>";

        $popularChar = getPopularChar($conn, $fieldName, $table);
        echo htmlspecialchars($popularChar);

        echo "</td></tr>";
    }
    echo "</table>";
}


function getPopularChar($conn, $fieldName, $table) {
    $popularChar = '';
    $charCounts = [];

    $result = $conn->query("SELECT `$fieldName` FROM `$table`");

    if ($result) {
        while ($row = $result->fetch_assoc()) {
            $value = $row[$fieldName] ?? '';
            if (is_string($value)) {
                $chars = str_split($value);
                foreach ($chars as $char) {
                    $charCounts[$char] = $charCounts[$char] ?? 0 + 1;
                }
            }
        }
        if (!empty($charCounts)) {
            arsort($charCounts);
            $popularChar = key($charCounts);
        }
    }

    return $popularChar;
}



// Основная логика
if (isset($_GET['db']) && isset($_GET['table'])) {
    getTableData($conn, $_GET['db'], $_GET['table']);
} elseif (isset($_GET['db'])) {
    getTables($conn, $_GET['db']);
} else {
    getDatabases($conn);
}

$conn->close();
?>

</body>
</html>
