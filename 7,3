<h1>Браузер Баз Данных</h1>

<?php
// Конфигурация базы данных (замените на свои данные!)
$host = 'localhost';
$user = 'your_username';
$password = 'your_password';
$database = 'your_database_name';

// Соединение с базой данных
$conn = new mysqli($host, $user, $password, $database);

if ($conn->connect_error) {
    die("Ошибка подключения: " . $conn->connect_error);
}

// Функция для определения наиболее часто встречающегося символа
function getMostFrequentChar($str) {
    if (empty($str) || !is_string($str)) {
        return '';
    }
    $charCounts = array_count_values(str_split($str));
    if (empty($charCounts)) {
        return ''; // Для пустых строк
    }
    return array_search(max($charCounts), $charCounts);
}


// Функция для отображения данных таблицы
function getTableData($conn, $table, $columnForAnalysis) {
    echo "<h2>Данные таблицы: " . htmlspecialchars($table) . "</h2>";

	// Проверка существования колонки (защита от ошибок)
	$result = $conn->query("DESCRIBE " . $table);
	if (!$result || !in_array($columnForAnalysis, array_column($result->fetch_all(MYSQLI_ASSOC), 'Field'))) {
		echo "<p>Таблицы или столбец не найден.</p>";
		return;
	}
	
    // Вывод структуры таблицы
    $result = $conn->query("SHOW COLUMNS FROM " . $table);
    echo "<h3>Структура таблицы</h3>";
    echo "<table><tr><th>Поле</th><th>Тип</th></tr>";
    while ($row = $result->fetch_assoc()) {
        echo "<tr><td>" . htmlspecialchars($row['Field']) . "</td><td>" . htmlspecialchars($row['Type']) . "</td></tr>";
    }
    echo "</table>";

    // Отображение данных с пагинацией
    $page = isset($_GET['page']) ? (int)$_GET['page'] : 1;
    $limit = 50;
    $offset = ($page - 1) * $limit;

    $sql = "SELECT * FROM " . $table . " LIMIT $limit OFFSET $offset";
    $result = $conn->query($sql);
	
	if (!$result) {
        die("Ошибка запроса: " . $conn->error);
    }


    echo "<h3>Данные таблицы</h3>";
    echo "<table><tr>";

    $fields = $result->fetch_fields();
    foreach ($fields as $field) {
        echo "<th>" . htmlspecialchars($field->name) . "</th>";
    }
    echo "<th>Самый популярный символ</th></tr>";

    while ($row = $result->fetch_assoc()) {
        echo "<tr>";
        foreach ($row as $value) {
            echo "<td>" . htmlspecialchars($value) . "</td>";
        }

		// Извлечение значения из указанного столбца
        $charAnalysis = $row[$columnForAnalysis];
        $popularChar = getMostFrequentChar($charAnalysis);

        echo "<td>" . htmlspecialchars($popularChar) . "</td>";
        echo "</tr>";
    }
    echo "</table>";
}

//Обработка запроса
if (isset($_GET['table']) && isset($_GET['column'])) {
    getTableData($conn, $_GET['table'], $_GET['column']);
} else {
    echo "<p>Укажите таблицу и столбец для анализа.</p>";
}


$conn->close();
?>

</body>
